<MyRoot>:
	RelativeLayout:
		size: (800, 800)
		
		MyPaintWidget:
			id: my_paint
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			size_hint: (1,1)
		
		MyColorPalette:
			pos_hint: {'center_x': 0.3, 'center_y': 0.1}
			size_hint: (0.3,0.05)
		
		Button:
			text: 'Undo'
			size_hint: (0.07, 0.07)
			pos_hint: {'center_x': 0.8, 'center_y': 0.1}
			on_release: my_paint.undo()
		
		Button:
			text: 'Clear'
			size_hint: (0.07, 0.07)
			pos_hint: {'center_x': 0.9, 'center_y': 0.1}
			on_release: my_paint.clear()
